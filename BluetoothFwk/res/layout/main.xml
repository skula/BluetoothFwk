<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<Button android:text="Connection" android:id="@+id/connect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"></Button>
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1">
	<EditText android:text="" android:id="@+id/sendtxt" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="4"></EditText>
	<Button android:text="Envoyer" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/send" android:layout_weight="1"></Button>
</LinearLayout>
<TextView android:text="" android:id="@+id/logview" android:bufferType="editable" android:layout_width="match_parent" android:layout_height="match_parent"></TextView>
</LinearLayout>
